@page "/addcourse"

@using LMS.Shared.DTOs
@using LMS.Blazor.Client.Services
@using System.Net.Http.Json
@inject HttpClient Http
@inject CourseServices CourseService

<h3>Create New Course</h3>

<EditForm Model="courseDto" method="post" OnValidSubmit="HandleSubmit" FormName="AddCourseForm">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3">
        <label for="name" class="form-label">Course Name</label>
        <InputText id="name" class="form-control" @bind-Value="courseDto.CourseName" />
       
    </div>

    <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <InputTextArea id="description" class="form-control" @bind-Value="courseDto.CourseDescription" />
        <ValidationMessage For="()=>courseDto.CourseDescription" />
    </div>

    <div class="mb-3">
        <label for="startDate" class="form-label">Start Date</label>
        <InputDate id="startDate" class="form-control" @bind-Value="courseDto.StartDate" />
        <ValidationMessage For="()=>courseDto.StartDate" />
    </div>

    <button type="submit" class="btn btn-primary">Create Course</button>
</EditForm>

@code {
    [SupplyParameterFromForm]
    private CourseDto courseDto { get; set; } = new();
    [Inject]
    private CourseServices courseServices { get; set; } = default!;

    public async Task HandleSubmit()
    {
        try
        {
            await CourseService.AddCourseAsync(courseDto);

            // Reset the form
            courseDto = new CourseDto();
            Console.WriteLine("Course created successfully.");
        }
        catch (Exception ex)
        {
            Console.Error.WriteLine($"An error occurred: {ex.Message}");
        }
    }
}
