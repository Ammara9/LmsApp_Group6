@page "/courses"
@rendermode InteractiveWebAssembly

@using Domain.Models.Entities
@using System.Net.Http.Json

@using LMS.Blazor.Client.Services
@using LMS.Shared.DTOs
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization

@inject HttpClient Http


<h3>Courses</h3>

@if (courses == null)
{
    <p>Loading courses...</p>
}
else if (!courses.Any())
{
    <p>No courses available.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Start Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in courses)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.CourseName</td>
                    <td>@item.CourseDescription</td>
                    <td>@item.StartDate.ToString("yyyy-MM-dd")</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<CourseDto>? courses;


    protected override async Task OnInitializedAsync()
    {
        try
        {
            // Fetch courses using relative API path
            courses = await Http.GetFromJsonAsync<List<CourseDto>>("api/courses");

            // Check if courses is null
            if (courses == null)
            {
                Console.Error.WriteLine("No courses returned from the API.");
            }
        }
        catch (Exception ex)
        {
            Console.Error.WriteLine($"Error loading courses: {ex.Message}");
        }
    }
}